{
	"version": 2,
	"public": true,
	"builds": [
		{ "src": "api/**/*.js", "use": "@vercel/node" },
		{ "src": "public/**", "use": "@vercel/static" }
	],
	"routes": [
		{ "src": "/api/(.*)", "dest": "/api/$1" },
		{ "src": "/", "dest": "/public/auth_page.html" },
		{ "src": "/(.*)", "dest": "/public/$1" }
	]
}

